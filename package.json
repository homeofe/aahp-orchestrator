{
  "name": "aahp-orchestrator",
  "displayName": "AAHP Orchestrator",
  "description": "Orchestrate GitHub Copilot and Claude Code with AAHP v3 context - zero questions, full context.",
  "version": "0.3.0",
  "publisher": "elvatis",
  "license": "MIT",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/elvatis/aahp-orchestrator.git"
  },
  "homepage": "https://github.com/elvatis/aahp-orchestrator#readme",
  "bugs": {
    "url": "https://github.com/elvatis/aahp-orchestrator/issues"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Other"
  ],
  "keywords": [
    "aahp",
    "copilot",
    "claude",
    "ai",
    "orchestrator",
    "handoff",
    "context",
    "agent"
  ],
  "galleryBanner": {
    "color": "#1e293b",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "aahp.orchestrator",
        "name": "aahp",
        "fullName": "AAHP Orchestrator",
        "description": "Context-aware AI proxy. Reads your .ai/handoff/ files - no questions asked.",
        "isSticky": true,
        "commands": [
          {
            "name": "help",
            "description": "Show all @aahp commands and usage examples"
          },
          {
            "name": "status",
            "description": "Show current AAHP status: phase, quick_context, last agent"
          },
          {
            "name": "tasks",
            "description": "List all tasks with their status and priority"
          },
          {
            "name": "next",
            "description": "What should I work on next?"
          },
          {
            "name": "context",
            "description": "Dump the full AAHP system prompt that gets injected into every request"
          },
          {
            "name": "phase",
            "description": "Show or set the current project phase"
          },
          {
            "name": "done",
            "description": "Mark a task as done. Usage: @aahp /done T-003"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "aahp.updateManifest",
        "title": "AAHP: Update Manifest Checksums"
      },
      {
        "command": "aahp.commitSession",
        "title": "AAHP: Commit Session"
      },
      {
        "command": "aahp.setPhase",
        "title": "AAHP: Set Phase"
      },
      {
        "command": "aahp.openDashboard",
        "title": "AAHP: Open Dashboard"
      },
      {
        "command": "aahp.copyContext",
        "title": "AAHP: Copy Context to Clipboard"
      },
      {
        "command": "aahp.runAll",
        "title": "AAHP: Run All Agents"
      },
      {
        "command": "aahp.runSingleRepo",
        "title": "AAHP: Run Agent for Current Repo"
      },
      {
        "command": "aahp.focusRepo",
        "title": "AAHP: Focus Repo in Dashboard"
      },
      {
        "command": "aahp.setTaskStatus",
        "title": "AAHP: Set Task Status"
      },
      {
        "command": "aahp.createTask",
        "title": "AAHP: Create New Task"
      },
      {
        "command": "aahp.retryAgent",
        "title": "AAHP: Retry Failed Agent"
      },
      {
        "command": "aahp.fixTask",
        "title": "AAHP: Fix Task"
      },
      {
        "command": "aahp.launchTask",
        "title": "Launch Agent",
        "icon": "$(play)"
      },
      {
        "command": "aahp.openTaskOnGitHub",
        "title": "Open on GitHub",
        "icon": "$(github)"
      },
      {
        "command": "aahp.refreshAll",
        "title": "AAHP: Refresh Dashboard"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "aahp.launchTask",
          "when": "view == aahp.allTasks && viewItem == task",
          "group": "inline@1"
        },
        {
          "command": "aahp.openTaskOnGitHub",
          "when": "view == aahp.allTasks && viewItem == task",
          "group": "inline@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aahp-sidebar",
          "title": "AAHP",
          "icon": "assets/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "aahp-sidebar": [
        {
          "type": "webview",
          "id": "aahp.dashboard",
          "name": "Dashboard"
        },
        {
          "id": "aahp.allTasks",
          "name": "All Open Tasks"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aahp.copyContext",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a"
      },
      {
        "command": "aahp.openDashboard",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d"
      },
      {
        "command": "aahp.runAll",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      },
      {
        "command": "aahp.runSingleRepo",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s"
      }
    ],
    "configuration": {
      "title": "AAHP Orchestrator",
      "properties": {
        "aahp.developmentRoot": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Set to `true` if this workspace is a **root development folder** containing multiple repos as subdirectories (e.g. `_Development/openclaw-ops/`, `_Development/AAHP/`). The extension will scan subdirectories for `.ai/handoff/MANIFEST.json` and switch context based on the active file.",
          "scope": "window"
        },
        "aahp.rootFolderPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional: override the root path to scan for AAHP repos. Leave empty to use the workspace folder. Example: `E:\\_Development`",
          "scope": "window"
        },
        "aahp.suppressRootPrompt": {
          "type": "boolean",
          "default": false,
          "description": "Suppress the 'Is this a development root folder?' prompt on startup.",
          "scope": "window"
        },
        "aahp.agentBackend": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "claude",
            "copilot"
          ],
          "enumDescriptions": [
            "Auto: high-priority tasks - Claude Code, medium/low - GitHub Copilot",
            "Always use Claude Code (claude CLI) for all agents",
            "Always use GitHub Copilot (VS Code LM API) for all agents"
          ],
          "markdownDescription": "Which AI backend to use when spawning agents via **Run All Agents**. `auto` uses Claude for heavy tasks and Copilot for routine ones.",
          "scope": "window"
        },
        "aahp.agentConcurrencyLimit": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "markdownDescription": "Maximum number of agents to run **in parallel** when using Run All Agents. `0` = unlimited (all at once). Set to e.g. `3` or `5` to cap token spend and avoid overloading your API quota.",
          "scope": "window"
        },
        "aahp.agentMaxRetries": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 5,
          "markdownDescription": "Maximum number of **automatic retries** when an agent fails (exits non-zero or no commit detected). Uses exponential backoff between attempts. Set to `0` to disable retries.",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts --ignore-pattern __tests__ --ignore-pattern __mocks__",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/vsce": "^2.26.0",
    "eslint": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.18"
  }
}
